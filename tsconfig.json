{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019"],
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
